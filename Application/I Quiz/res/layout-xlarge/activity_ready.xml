<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/quizbackground"
    android:orientation="vertical" >

    <!-- 인천대 로고 부분 -->

	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
		 >
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
		>


            <TextView
                android:id="@+id/quiz_txt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/boardpannel"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="9pt" />  
            	<ImageView
                    android:id="@+id/life1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="right"
                    android:src="@drawable/life" />

                <ImageView
                    android:id="@+id/life2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="130dp"
                    android:layout_gravity="right"
                    android:src="@drawable/life" />

                <ImageView
                    android:id="@+id/life3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="260dp"
                    android:layout_gravity="right"
                    android:src="@drawable/life" />
                
                <ImageView
                    android:id="@+id/passlife1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="180dp"
                    android:layout_gravity="right|bottom"
                    android:src="@drawable/passimg" />
                                
               <ImageView
                    android:id="@+id/passlife2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="right|bottom"
                    android:src="@drawable/passimg" />
 
        <TextView
            android:id="@+id/timer"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/timer"
            android:gravity="center"
            android:text="5" />

         <ImageView
            android:id="@+id/ready"
            android:layout_width="400dp"
            android:layout_height="600dp"
            android:layout_gravity="center"
             />

        <ImageView
            android:id="@+id/go"
            android:layout_width="400dp"
            android:layout_height="600dp"
            android:layout_gravity="center"
             />
    </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="6" >
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="5" >
        
            <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         android:layout_weight="1"
        android:background="@drawable/obutton"
        android:text="good" />

    <Button
        android:id="@+id/button2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/xbutton"
        android:text="good" />
    </LinearLayout>



</LinearLayout>

