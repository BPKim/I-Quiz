<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/quizbackground"
    android:orientation="vertical" >

    <!-- 인천대 로고 부분 -->

	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
		 >
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
		>


            <TextView
                android:id="@+id/quiz_txt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/boardpannel"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="9pt" />  
            	<ImageView
                    android:id="@+id/life1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:src="@drawable/life" />
				<ImageView
                    android:id="@+id/life11"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:src="@drawable/scarelife" />
                <ImageView
                    android:id="@+id/life2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="right"
                    android:src="@drawable/life" />

                <ImageView
                    android:id="@+id/life3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="100dp"
                    android:layout_gravity="right"
                    android:src="@drawable/life" />
                
                <ImageView
                    android:id="@+id/passlife1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="80dp"
                    android:layout_gravity="right|bottom"
                    android:src="@drawable/passimg" />
                                
               <ImageView
                    android:id="@+id/passlife2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right|bottom"
                    android:src="@drawable/passimg" />
     
        <ViewFlipper
		android:id="@+id/viewFlipper"  
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent">
        <TextView
            android:id="@+id/timer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/timer"
            android:gravity="center"
            android:text="5" />

        <ImageView
            android:id="@+id/o1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/o" />

        <ImageView
            android:id="@+id/x1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/x" />
	    <ImageView
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/pass_img" />
        


    </ViewFlipper>
        <TextView
            android:id="@+id/combo"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:background="@drawable/combo_img" />

        <TextView
            android:id="@+id/score"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="40dp" 
            android:layout_marginTop="40dp"
            />

    </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="6" >
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="5" >
        
            <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         android:layout_weight="1"
        android:background="@drawable/obutton"
        android:text="good" />

    <Button
        android:id="@+id/button2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/xbutton"
        android:text="good" />
    </LinearLayout>



</LinearLayout>

